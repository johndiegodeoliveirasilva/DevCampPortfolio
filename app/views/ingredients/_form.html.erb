<%= form_with model: @ingredient, local: true do |form| %>
  <p>  
    <%= form.label :name %>
    <%= form.text_field :name %> 
  </p>

  <p>  
    <%= form.label :price %>
    <%= form.text_field :price   %> 
  </p>

  <p>  
    <%= form.label :description %>
    <%= form.text_field :description %> 
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>