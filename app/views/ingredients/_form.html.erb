<%= form_with model: @ingredient, local: true do |form| %>
<% if @ingredient.errors.any? %>
  <% @ingredient.errors.full_messages.each do |error| %>
    <%= alert_generator error %>
  <% end %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">Upload</span>
        </div>
        <div class="custom-file">
          <%= form.file_field :avatar, class: 'custom-file-input', id: "inputGroupFile01" %> 
          <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
        </div>
      </div>
        
  
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %> 
      </div>

      <div class="form-group">
        <%= form.label :price %>
        <%= form.text_field :price, class: "form-control" %> 
      </div>

      <div class="form-group">
        <%= form.check_box :active, class: 'checkbox' %>
      </div>
    </div>
     <div class="col-md-6">
      <%= form.label :description %>
      <%= form.text_area :description, rows: 5, class: "form-control" %> 
     </div>
    </div>

    
    <%= submit_tag "Save Ingredient", class: "btn btn-primary btn-lg btn-block", data: { disable_with: "Please Wait..." } %>
  </div>
<% end %>
