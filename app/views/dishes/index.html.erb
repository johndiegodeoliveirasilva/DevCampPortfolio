<h1>Dishes are great!!</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Total</th>
      <th>Value Calorie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td><%= dish.description %></td>
        <td><%= dish.total %></td>
        <td><%= dish.value_calorie %></td>
        <td><%= link_to "Show", dish %></td>
        <td><%= link_to "Edit", edit_dish_path(dish) %></td>
        <td><%= link_to "Destroy", dish, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Dish', new_dish_path %>  

