<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @dish.avatar, width: '100%' %>
    </div>
    <div class="col-md-5">
      <h1><%= @dish.name %></h1>
      <hr>
      <em><%= number_to_currency(@dish.total, precision: 2) %></em>
      <hr>
      <em> <%= @dish.value_calorie %> Kcal</em>
      <hr>
      <%= @dish.description %>
    </div>
  </div>
</div>
