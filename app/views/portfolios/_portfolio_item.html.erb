<div class="col-md-4">
  <div class="card mb-4 shadow-sm" data-id="<%= portfolio_item.id %>">
<%= image_tag portfolio_img(portfolio_item.thumb_image.url, 'thumb'), width: '100%' %>
    <div class="card-body" >
      <div class="mb-3">
        <%= portfolio_item.subtitle %>
      </div>
      
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "View", portfolio_show_path(portfolio_item), class:"btn btn-sm btn-outline-secondary" %>

          <%= link_to "Edit", edit_portfolio_path(portfolio_item), class:"btn btn-sm btn-outline-secondary" if logged_in?(:site_admin) %>

        </div>
        <small class="text-muted"><%= distance_of_time_in_words(portfolio_item.created_at, Time.now) %> ago </small>
      </div>
    </div>
  </div>
</div>
